#!/usr/bin/env bash

help () {
cat << 'EOB'
# NAME

__gwmrel__ - Reload `gwm`

# SYNOPSIS

```
gwmrel --toggle|-t
gwmrel --stop|-s
gwmrel --start|-S
gwmrel --help|-h
```
EOB
exit
}

while true; do
	case $1 in
		--toggle | -t ) O_toggle=1 ;;
		--stop   | -s ) O_stop=1   ;;
		--start  | -S ) O_start=1  ;;
		--help ) help ;;
		-h ) help | sed -n "/^__/,/^$/p;/# SYNOPSIS/,/#/p" | sed 's/__.* - /\t/;/^#/d;/^$/d;s/```//g' && exit ;;
		-- ) shift ; break ;;
		*  ) break         ;;
	esac
	shift
done

kill -1 $(pidof cwm)

if [[ -n $O_toggle ]] || [[ -n $O_stop ]] ; then
	pkill -f gwmlstn
	pkill -f gwmpulse
fi

if [[ -n $O_toggle ]] || [[ -n $O_start ]] ; then
	gwmpulse &>/dev/null &
	gwmlstn &>/dev/null &
fi
