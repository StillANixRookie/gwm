#!/usr/bin/env bash

# OA: Gavin Vales
# CREATED: Fri 15 Nov 22:07:56 GMT 2019

CFG=$HOME/.config/gwm/config

help () {
cat << 'EOB'
# NAME

__gwmget__ - Get `<variable>` from `~/.config/gwm/config`

# SYNOPSIS

```
gwmget <variable>
gwmget --help|-h
```

EOB
exit
}


while true; do
	case $1 in
		--help ) help ;;
		-h     ) help | sed -n "/^__/,/^$/p;/# SYNOPSIS/,/#/p" | sed 's/__.* - /\t/;/^#/d;/^$/d;s/```//g' && exit ;;
		-- ) shift ; break ;;
		*  ) break         ;;
	esac
	shift
done

VAR="${@:-}"

awk -F '=' -v VAR="$VAR" '$1 ~ VAR {print $2}' $CFG
